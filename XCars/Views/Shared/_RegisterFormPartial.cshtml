@using XCars.Models
@model  RegisterViewModel
@using XCars.Resourses

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Зарегистрироваться на <img height="32" src="~/Content/images/logo.svg"></h4>
</div>
<div class="modal-left">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <label>@Html.DisplayNameFor(m => m.Email)</label>
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        <label>@Html.DisplayNameFor(m => m.PhoneNumber)</label>
        @Html.TextBoxFor(m => m.PhoneNumber)
        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })

        <label>@Html.DisplayNameFor(m => m.Password)</label>
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        <label>@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
        @Html.PasswordFor(m => m.ConfirmPassword)
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

        <div class="checkbox">
            <input type="checkbox">
            <label>
                Я соглашаюсь с <a href="#">
                    условиями
                    использования
                </a> сайта EMCar
            </label>
        </div>
        <button type="submit" class="but_purple but">@Resource.Register</button>
        @*<a  class="but_purple but">@Resource.Register 2</a>*@
    }
</div>
<div class="modal-right">
    <section id="socialLoginForm">
        @Html.Partial("~/Views/Account/_ExternalLoginsListPartial.cshtml", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </section>
</div>