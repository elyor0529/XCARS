<div class="acc_personal_inf">
    @*<img width="200" class="img-circle async" title="@Model.Name" alt="@Model.Name" src="@XCars.Common.XCarsConfiguration.ClearGif" finalSrc="@Model.PhotoSrc">*@
    <img width="200" class="img-circle" title="@Model.Name" alt="@Model.Name" src="@Model.PhotoSrc">
    <span class="acc_name">@Model.Name</span>
    <span class="acc_balance">@Resource.Balance:  <strong>@Model.Balance @Resource.uah</strong></span> <span class="acc_gam"><a href="#">+</a></span>
</div>
<div class="acc_personal_more_inf">
    <span>@Html.DisplayNameFor(model => model.Email): </span><strong>@Html.DisplayFor(model => model.Email)</strong>
    <span>@Html.DisplayNameFor(model => model.DateRegistered): </span><strong>@Html.DisplayFor(model => model.DateRegistered)</strong>
    @if (!string.IsNullOrWhiteSpace(Model.Region))
    {
        <span>@Html.DisplayNameFor(model => model.Region): </span><strong>@Html.DisplayFor(model => model.Region)</strong>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Contacts))
    {
        <span>@Html.DisplayNameFor(model => model.Contacts): </span><strong>@Html.DisplayFor(model => model.Contacts)</strong>
    }
    
    <a href="/MyProfile/Edit">@Resource.EditProfile</a>
</div>

