            <i></i>
            @Html.Raw(Server.HtmlDecode(Resource.CreateServiceStation))
        </a>
    </div>
    <div class="acc_personal_more_create_single autowash">
        <a href="#">
            <i></i>
            @Html.Raw(Server.HtmlDecode(Resource.CreateAutoWashService))
