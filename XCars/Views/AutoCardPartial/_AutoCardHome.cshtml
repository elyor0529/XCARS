@model XCars.ViewModels.AutoShortInfoVM
@using XCars.Resourses
@using XCars.Common

@{
    string photoSrc = XCarsConfiguration.BucketEndpoint + XCarsConfiguration.BucketName + "/" + XCarsConfiguration.AutoPhotosUploadUrl + (Model.Photo.ID != 0 ? (Model.Photo.ID + "_272x179") : XCarsConfiguration.AutoNoPhotoName) + XCarsConfiguration.PhotoExtension;
    string autoName = Model.Make + " " + Model.Model + (!string.IsNullOrWhiteSpace(Model.Modification) ? " " + Model.Modification : "")/* + " " + Model.YearOfIssue*/;
}

<div class="home_ads_in_single">
    <a href="/Auto/Details/@Model.ID">
        <div class="home_ads_in_photo">
            <img class="async" height="360" title="@autoName" alt="@autoName" finalSrc="@photoSrc" src="@XCars.Common.XCarsConfiguration.ClearGif">
        </div>
        <div class="home_ads_in_description">
            <div><span class="name">@autoName </span></div>
            <span class="green">@Model.PriceUSDStr  </span><span class="price_grn">/ @Model.PriceUAHStr</span>
            <div class="more_des"><span>@Model.Probeg @Resource.DistanceShort</span>@if (!string.IsNullOrWhiteSpace(Model.TransmissionType)){<span>@Model.TransmissionType</span>}@if (!string.IsNullOrWhiteSpace(Model.FuelType) && Model.EngineCapacity != null){<span>@Model.FuelType, @Model.EngineCapacity @Resource.LitresShort</span>}<span>@Model.YearOfIssue</span>
            </div>
        </div>
    </a>
</div>